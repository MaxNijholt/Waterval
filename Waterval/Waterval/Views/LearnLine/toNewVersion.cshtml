@model DomainModel.Models.LearnLine
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/css")

<h2>Leerlijn aanpassen:</h2>

@using (Html.BeginForm("toNewVersion", "LearnLine", new { ReturnUrl = ViewBag.ReturnUrl },
            FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{

    @Html.ValidationSummary(true)


    <fieldset>
        <legend></legend>
        @Html.HiddenFor(model => model.PrevLearnLine_ID)
        @Html.Partial("_CreateOrEdit", Model)
        <p>
            <input type="submit" value="Leerlijn opslaan" class="btn btn-success" /> |
            @Html.ActionLink("Terug naar Index", "Index")
        </p>
    </fieldset>
}


@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/competentieScripts.js"></script>
    <script src="~/Scripts/Filter.js"></script>
}
