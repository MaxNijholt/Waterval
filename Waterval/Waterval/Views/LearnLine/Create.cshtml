@model DomainModel.Models.LearnLine
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "LearnLine", new { ReturnUrl = ViewBag.ReturnUrl },
            FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    <h2>Leerlijn Toevoegen</h2>
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>
        @Html.Partial("_CreateOrEdit", null)
        <p>
            <input type="submit" value="Nieuwe Leerlijn Opslaan" name="btn_Save" class="btn btn-success" /> |
            @Html.ActionLink("Terug naar Index", "Index")
        </p>
    </fieldset>
}


@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/competentieScripts.js"></script>
    <script src="~/Scripts/Filter.js"></script>
}
