@model DomainModel.Models.Study
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nieuwe Studierichting Aanmaken</h2>

@using (Html.BeginForm("Create", "Study", new { ReturnUrl = ViewBag.ReturnUrl },
            FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{

    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>
        @Html.Partial("_CreateOrEdit", null)
        <p>
            <input type="submit" value="Nieuwe Studierichting Opslaan" name="btn_Save" class="btn btn-success" /> |
            @Html.ActionLink("Terug naar Index", "Index")
        </p>
    </fieldset>
}


@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Filter.js"></script>

}
