@model DomainModel.Models.Study
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/css")

<h2>Opleiding aanpassen: @Model.Title</h2>

@using (Html.BeginForm("Edit", "Study", new { ReturnUrl = ViewBag.ReturnUrl },
            FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.ValidationSummary(true)
    <fieldset>

        @Html.HiddenFor(model => model.Study_ID)
        @Html.Partial("_CreateOrEdit", Model)

        <p>
            <input type="submit" value="Studierichting aanpassen" class="btn btn-success" /> |
            @Html.ActionLink("Terug naar Index", "Index")
        </p>
    </fieldset>

}
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Filter.js"></script>

}
