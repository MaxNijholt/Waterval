        </tr>
        <tr>
            <td>@Html.ActionLink("Communicatie Media Design", "Leerlijn")</td>
            <td>@Html.ActionLink("Aanpassen", "Edit", null, new { @class = "btn btn-warning" })</td>
            <td>@Html.ActionLink("Verwijderen", "Delete", null, new { @class = "btn btn-danger" })</td>
        </tr>
    </table>

    @Html.ActionLink("Nieuwe Leerlijn", "Create", null, new { @class = "btn btn-success" })

