@model DomainModel.Models.LearnGoal
@{
    ViewBag.Title = @Html.DisplayFor(model => model.Description);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/css")

<h2>Leerdoel aanpassen: @Model.Description</h2>

@using (Html.BeginForm("Edit", "LearnGoal", new { ReturnUrl = ViewBag.ReturnUrl },
            FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.ValidationSummary(true)
    <fieldset>

        <legend></legend>
        @Html.HiddenFor(model => model.LearnGoal_ID)
        @Html.Partial("_CreateOrEdit", Model)

        <p>
            <input type="submit" value="Leerdoel @Model.Description Aanpassen" class="btn btn-success" /> |
            @Html.ActionLink("Terug naar Index", "Index")
        </p>
    </fieldset>

}
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/competentieScripts.js"></script>
    <script src="~/Scripts/Filter.js"></script>
}














