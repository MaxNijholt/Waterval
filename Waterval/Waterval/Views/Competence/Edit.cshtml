@model DomainModel.Models.Competence
@{
    ViewBag.Title = @Html.DisplayFor(model => model.Title);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/css")

<h2>Competentie aanpassen: @Model.Title</h2>

@using (Html.BeginForm("Edit", "Competence", new { ReturnUrl = ViewBag.ReturnUrl },
            FormMethod.Post, new { @class = "form-horizontal", @role = "form" })) {
    ViewBag.WhatAmI = "Create";
    @Html.ValidationSummary(true)
    <fieldset>

        @Html.HiddenFor(model => model.Competence_ID)
        @Html.Partial("_CreateOrEdit", Model)

        <p>
            <input type="submit" value="Competentie aanpassen" class="btn btn-success" /> |
            @Html.ActionLink("Terug naar Index", "Index")
        </p>
    </fieldset>

}
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/competentieScripts.js"></script>
    <script src="~/Scripts/Filter.js"></script>
}














