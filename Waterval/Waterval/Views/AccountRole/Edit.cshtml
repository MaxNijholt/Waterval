@model DomainModel.Models.AccountRole
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/css")

<div class="container">
	<h2>Rol Aanpassen: @Html.DisplayFor(model => model.RoleName)</h2>

	@using (Html.BeginForm("Edit", "AccountRole", new { ReturnUrl = ViewBag.ReturnUrl },
			FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
	{
		@Html.ValidationSummary(true)
		<fieldset>
			<legend></legend>
			@Html.HiddenFor(model => model.Role_ID)
			@Html.Partial("_CreateOrEdit", Model)
			<p>
				<input type="submit" value="Rol opslaan" class="btn btn-success" /> |
				@Html.ActionLink("Terug naar Index", "Index")
			</p>
		</fieldset>
	}
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/RoleScript.js"></script>
    <script src="~/Scripts/Filter.js"></script>
}