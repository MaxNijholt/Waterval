        </tr>
        <tr>
            <td>
                Vakcode
            </td>
            <td>@Html.TextBox("name", null, new { @class = "form-control" })</td>

        </tr>
        <tr>
            <td>
                Organisatie
            </td>

            <td>@Html.TextBox("name", null, new { @class = "form-control" })</td>

        </tr>
        <tr>
            <td>
                Studiebelasting
            </td>

            <td>@Html.TextBox("name", null, new { @class = "form-control" })</td>
        </tr>

        <tr>
            <td>
                Werkvorm
            </td>

            <td>@Html.TextBox("name", null, new { @class = "form-control" })</td>

        </tr>
        <tr>
            <td>
                Ingangsniveau
            </td>

            <td>@Html.TextBox("name", null, new { @class = "form-control" })</td>

        </tr>
        <tr>
            <td>
