@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/css")
<div class="container">
    <h2>Compententies</h2>
    <div class="container">
        <input type="text" class="form-control" placeholder="filter compententies...">

        <table class="table table-striped table-bordered">
            <caption></caption>
            <thead>
                <tr>
                    <th>Titel</th>
                    <th>Omschrijving Kort</th>
                    <th>Zie Modules</th>
                    <th>Aanpassen</th>
                    <th>Verwijderen</th>
                </tr>
            </thead>

            <tr>
                <td>@Html.ActionLink("Procesanalyse uitvoeren", "Details")</td>
                <td>De student is in staat om een procesanalyse uit te voeren.</td>
                <td><input type="submit" class="btn btn-avans" name="" value="Open Modules" /></td>
                <td><input type="submit" class="btn btn-warning" name="Edit" value="Aanpassen" /></td>
                <td><input type="submit" class="btn btn-danger" name="Delete" value="Verwijderen" /></td>
            </tr>
            <tr>
                <td>@Html.ActionLink("Informatieanalyse uitvoeren ", "Details")</td>
                <td>De student kan op basis van een procesanalyse onderzoeken welke informatiestromen er zijn in relatie tot die processen</td>
                <td><input type="submit" class="btn btn-avans" name="" value="Open Modules" /></td>
                <td><input type="submit" class="btn btn-warning" name="Edit" value="Aanpassen" /></td>
                <td><input type="submit" class="btn btn-danger" name="Delete" value="Verwijderen" /></td>
            </tr>
            <tr>
                <td>@Html.ActionLink("Over inzet van ICT adviseren", "Details")</td>
                <td>De student kan vanuit een proces en informatieanalyse aangeven welke verbeteringen nodig zijn.</td>
                <td><input type="submit" class="btn btn-avans" name="" value="Open Modules" /></td>
                <td><input type="submit" class="btn btn-warning" name="Edit" value="Aanpassen" /></td>
                <td><input type="submit" class="btn btn-danger" name="Delete" value="Verwijderen" /></td>
            </tr>

        </table>
    </div>
    @Html.ActionLink("Nieuwe Compententie", "Create", null, new { @class = "btn btn-success" })

</div>
